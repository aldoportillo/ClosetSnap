<div>
  <div>
    <h1>
      List of all itemoutfits
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new itemoutfit
    </h2>

    <form action="/insert_itemoutfit" method="post">
      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id">
      </div>

      <div>
        <label for="outfit_id_box">
          Outfit
        </label>

        <input type="text" id="outfit_id_box" name="query_outfit_id">
      </div>

      <button>
        Create itemoutfit
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          Outfit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_itemoutfits.each do |an_itemoutfit| %>
      <tr>
        <td>
          <%= an_itemoutfit.id %>
        </td>

        <td>
          <%= an_itemoutfit.item_id %>
        </td>

        <td>
          <%= an_itemoutfit.outfit_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_itemoutfit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_itemoutfit.updated_at) %> ago
        </td>

        <td>
          <a href="/itemoutfits/<%= an_itemoutfit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
