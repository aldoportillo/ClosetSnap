<div>
  <div>
    <h1>
      List of all itemcategories
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new itemcategory
    </h2>

    <form action="/insert_itemcategory" method="post">
      <div>
        <label for="category_id_box">
          Category
        </label>

        <input type="text" id="category_id_box" name="query_category_id">
      </div>

      <div>
        <label for="item_id_box">
          Item
        </label>

        <input type="text" id="item_id_box" name="query_item_id">
      </div>

      <button>
        Create itemcategory
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Item
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_itemcategories.each do |an_itemcategory| %>
      <tr>
        <td>
          <%= an_itemcategory.id %>
        </td>

        <td>
          <%= an_itemcategory.category_id %>
        </td>

        <td>
          <%= an_itemcategory.item_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_itemcategory.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_itemcategory.updated_at) %> ago
        </td>

        <td>
          <a href="/itemcategories/<%= an_itemcategory.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
