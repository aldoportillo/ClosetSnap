<p style="color: green"><%= notice %></p>

<h1>Outfits</h1>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Items</th>
        <th scope="col">Likes</th>
      </tr>
    </thead>
    <tbody>
      
      <% @outfits.each do |outfit| %>
      
        <tr>
          <td>
            <%= link_to outfit_path(outfit) do %>
              <img src="<%= outfit.image_url %>" alt="Image" class="img-fluid">
            <% end %>
          </td>
          <td>
            <% outfit.items.map do |item|%>
              <%= link_to item_path(item) do %>
              <p><%= item.name %></p>
              <% end %>
            <% end %>
          </td>
          <td><%= outfit.compliments%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New outfit", new_outfit_path %>
